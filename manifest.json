{
    "manifest_version": 3,
    "name": "Screen Recorder",
    "version": "1.0",
    "description": "Record audio, camera, and screen",
    "permissions": [
      "audioCapture",
      "videoCapture",
      "desktopCapture"
    ],
    "host_permissions": [
      "activeTab"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
      }
    },
    "icons": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    },
    "permissions": [
      "activeTab"
    ]
  }
  